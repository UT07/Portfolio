# Asset CDN base URL
REACT_APP_ASSET_BASE_URL=https://your-cdn.cloudfront.net/assets

# SoundCloud Configuration (client-side, optional if using Netlify Functions)
REACT_APP_SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id
REACT_APP_SOUNDCLOUD_PROFILE_URL=https://soundcloud.com/your-profile
REACT_APP_SOUNDCLOUD_USER_ID=your_user_id
REACT_APP_SOUNDCLOUD_ALLOW_API=false

# YouTube Configuration (client-side, optional if using Netlify Functions)
REACT_APP_YOUTUBE_API_KEY=your_youtube_api_key
REACT_APP_YOUTUBE_CHANNEL_HANDLE=your_channel_handle
REACT_APP_YOUTUBE_CHANNEL_ID=your_channel_id

# Feed proxy (uses allorigins by default, or Netlify function if enabled)
REACT_APP_FEED_PROXY=https://api.allorigins.win/raw?url=

# Enable Netlify Functions for API proxies (recommended for production)
# When enabled, API keys should be set as Netlify environment variables instead
REACT_APP_USE_NETLIFY_FUNCTIONS=false

# Server-side only (set in Netlify dashboard, not in .env):
# SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id
# SOUNDCLOUD_USER_ID=your_user_id
# YOUTUBE_API_KEY=your_youtube_api_key
# YOUTUBE_CHANNEL_HANDLE=your_channel_handle
# YOUTUBE_CHANNEL_ID=your_channel_id
